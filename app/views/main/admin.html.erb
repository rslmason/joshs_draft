<h1>Admin</h1>
<h2>Drafts</h2>
<% @drafts.each do |draft| %>
  <%= link_to "#{draft.title} - \##{draft.id} - #{draft.users.count}/#{draft.total_players}#{draft.drawn? ? '[drawn]' : ''}", "/drafts/#{draft.id}/delete", :method => :post %><br/>
<% end %>
<h2>Users</h2>
<% @users.each do |user| %>
  <%= link_to "#{user.name} - \##{user.id}", "/users/#{user.id}/delete", :method => :post %><br/>
<% end %>