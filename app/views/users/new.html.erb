<%= form_with do |f| %>
  <%= f.label :name, "name" %>
  <%= f.text_field :name %>
  <%= f.label :password, "password DO NOT USE ANY PASSWORD YOU NORMALLY USE. THIS IS NOT ENCRYPTED" %>
  <%= f.text_field :password %>
  <%= f.submit %>
<% end %>


<% if @errors %>
  <% @errors.each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>